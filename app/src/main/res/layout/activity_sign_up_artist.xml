<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.tattoos.clientapp.activities.SignUpArtistActivity">

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/signUpProgressBar"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Create your Artist Profile"
            android:textStyle="bold"
            android:id="@+id/signUpArtistHolder" />

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/showcase_your_tattos"
            android:textStyle="bold"
            android:id="@+id/chooseTattosHolder" />

        <TableLayout
            android:id="@+id/tableSignUp"
            android:layout_marginTop="20dp"
            android:shrinkColumns="*"  android:stretchColumns="*"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_alignParentBottom="true">

            <TableRow
                android:layout_height="wrap_content"
                android:layout_width="match_parent">
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_picture"
                            android:id="@+id/selectPictureButton11"
                            android:onClick="choosePictureButtonClicked"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooDescription11"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="body part"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooBodyPart11"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooStyle11"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_picture"
                            android:id="@+id/selectPictureButton12"
                            android:onClick="choosePictureButtonClicked"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooDescription12"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="body part"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooBodyPart12"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooStyle12"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>
                    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                        android:orientation="vertical" android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/select_picture"
                            android:id="@+id/selectPictureButton13"
                            android:onClick="choosePictureButtonClicked"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooDescription13"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="body part"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooBodyPart13"
                            android:layout_gravity="center_horizontal" />

                        <EditText
                            android:hint="style"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/TattooStyle13"
                            android:layout_gravity="center_horizontal" />

                    </LinearLayout>
            </TableRow>
        </TableLayout>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/dont_worry_you_can_add_more_tattoos_later"
            android:id="@+id/addMoreTattosLater"
            android:textStyle="italic"
            android:layout_gravity="left" />

        <LinearLayout
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/signUpArtistBio"
                android:id="@+id/signUpArtistBioHolder"
                android:textStyle="bold"
                android:layout_gravity="left" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/artistBio"
                android:layout_gravity="left" />

        </LinearLayout>

        <Button
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submitButton"
            android:id="@+id/submitButton"
            android:onClick="submitButtonClicked"
            android:layout_gravity="center_horizontal" />

    </LinearLayout>
</RelativeLayout>
</ScrollView>